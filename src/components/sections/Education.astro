---
import Section from '../ui/Section.astro'
import { education } from '@resume'

---

<Section title='EducaciÃ³n'>
<ul>
  {
    education.map(({ institution, startDate, endDate, courses, area}) => {
      const startYear = new Date(startDate).getFullYear();
      const endYear = endDate !== null ? new Date(endDate).getFullYear() : 'actualidad'

        return (
        <li>
          <article>
            <header>
              <div>
                <h3>{institution}</h3>
                <h4>{area}</h4>
              </div>

              <time>
                {startYear} - {endYear}
              </time>
              </header>

            <footer>
              <p>{courses.join(', ')}</p>
            </footer>
          </article>
          </li>
        )
    })
  }
</ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  span {
    color: #888;
  }


  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    font-weight: 400;
    color: #222;
  }

  header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
